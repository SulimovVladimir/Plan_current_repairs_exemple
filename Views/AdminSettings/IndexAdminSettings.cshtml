@model Plan_current_repairs.Data.Models.Settings

@{
    ViewBag.Title = "Настройки";
    Layout = "_Layout";
}


<form asp-controller="AdminSettings" asp-action="IndexAdminSettings" class="">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 col-md-2"></div>
            <div class="col-xl-6 col-md-8 col-sm-12">

                <div class="form-group bg-secondary text-white">
                    <h4 class="text-center">Главный инженер УС</h4>
                    <div class="row mx-3 pb-2">
                        <div class="col">
                            <label asp-for="ChiefEngineer_Post" class="control-label">Должность</label>
                            <input type="text" asp-for="ChiefEngineer_Post" class="form-control" />
                        </div>
                        <div class="col">
                            <label asp-for="ChiefEngineer_Name" class="control-label">ФИО</label>
                            <input type="text" asp-for="ChiefEngineer_Name" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
             <div class="col-xl-3 col-md-2"></div>
         </div>

            <div class="row">
                <div class="col-xl-3 col-md-2"></div>
                    <div class="col-xl-6 col-md-8 col-sm-12">
                        <div class="form-group bg-secondary text-white">
                            <h4 class="text-center pt-2">Начальник ПТО</h4>
                    <div class="row mx-3  pb-2">
                                <div class="col">
                                    <label asp-for="HeadOfPTO_Post" class="control-label">Должность</label>
                                    <input type="text" asp-for="HeadOfPTO_Post" class="form-control" />
                                </div>
                                <div class="col">
                                    <label asp-for="HeadOfPTO_Name" class="control-label">ФИО</label>
                                    <input type="text" asp-for="HeadOfPTO_Name" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                <div class="col-xl-3 col-md-2"></div>
            </div>

            <div class="row">
                <div class="col-xl-3 col-md-2"></div>
                <div class="col-xl-6 col-md-8 col-sm-12">
                    <div class="form-group bg-secondary text-white">
                        <h4 class="text-center pt-2">Инженер ПТО</h4>
                    <div class="row mx-3 pb-2">
                            <div class="col">
                                <label asp-for="EngineerOfPTO_Post" class="control-label">Должность</label>
                                <input type="text" asp-for="EngineerOfPTO_Post" class="form-control" />
                            </div>
                            <div class="col">
                                <label asp-for="EngineerOfPTO_Name" class="control-label">ФИО</label>
                                <input type="text" asp-for="EngineerOfPTO_Name" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-2"></div>
            </div>

        <div class="row mt-2">
            <div class="col-xl-3 col-md-2"></div>
            <div class="col-xl-3 col-md-4 col-sm-6">
                
                <div class="input-group text-white col">
                    <label asp-for="CurrentYear" class="input-group-text">Текущий год</label>
                    <input type="text" asp-for="CurrentYear" class="form-control" />
                </div>

            </div>
                <div class="col-xl-3 col-md-4 col-sm-6">
                <div class="input-group text-white col">
                    <label class="input-group-text">Все года</label>
                    <select class="form-select" asp-items="ViewBag.AllYears" name="AllYears"></select>
                    <a class="btn btn-dark btn-outline-dark text-white " asp-controller="AdminSettings" asp-action="AddYear">Добавить год</a>
            </div>
            </div>
            <div class="col-xl-3 col-md-2"></div>
        </div>

        <div class="row mt-4">
            <div class="col-xl-3 col-md-2"></div>
            <div class="col-xl-3 col-md-4 col-sm-6">

                <div class="input-group">
                    <a class="btn btn-outline-dark bg-dark text-white form-control" asp-controller="Admin" asp-action="CheckJornal">Проверка журнала</a>
                </div>

            </div>
            <div class="col-xl-3 col-md-4 col-sm-6">
                <div class="input-group">
                    <a class="btn btn-outline-dark bg-dark text-white form-control" asp-controller="Admin" asp-action="CheckMail">Проверка почты</a>
                </div>
            </div>
            <div class="col-xl-3 col-md-2"></div>
        </div>
    </div>

    <div class="form-group position-relative">
        <input type="submit" value="Сохранить" class="btn-dark position-absolute translate-middle-x start-50 mt-4" />
    </div>
</form>
           